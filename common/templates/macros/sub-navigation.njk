{% macro subNavigation(items) %}
  <div class="govuk-grid-column-one-third sticky">
    <nav class="sub-navigation" data-click-events data-click-category="Content" data-click-action="Button clicked">
      <ol itemscope itemtype="http://schema.org/ItemList">
      {% for item in items %}
        <li class="sub-navigation__item {% if item.active %}sub-navigation__item--active{% endif %}" itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
          <a class="govuk-link" href="{{ item.href }}" itemprop="item"><span itemprop="name">{{ item.name }}</span></a>
        </li>
        {% endfor %}
      </ol>
    </nav>
  </div>
{% endmacro %}
