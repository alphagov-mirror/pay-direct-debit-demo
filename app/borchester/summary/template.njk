{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
<html>
  <head>
    <meta charset="utf-8">
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/static/images/icon.png" />

    <title>Welcome | Borchester City Council</title>
    <link rel="stylesheet" href="/public/stylesheets/borchester.min.css">
    <link rel="stylesheet" href="/public/stylesheets/application.min.css">
  </head>
  <body>
    <div class="header">
      <nav class="top-bar">
          <div class="name">
            <h1>Borchester City Council</h1>
          </div>
        <section class="top-bar-section">
          <ul>
            <li><a href="#">Services</a></li>
            <li><a href="/notices">Notices</a></li>
            <li><a href="#">Votes and debates</a></li>
            <li><a href="#">Your councillors</a></li>
            <li><a href="#">Buses and trams</a></li>
            <li><a href="#">Data</a></li>
          </ul>
        </section>
      </nav>
    </div>
    <div class="wrapper fullscreen">
      <div class="row">
        <div class="column-half">
          <div class="back">
            <a href="javascript:history.back()" class="link-back">Back</a>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="column-two-thirds">
          <h1 class="heading-large" style="margin-bottom:30px; margin-top:60px;">Council Tax payment summary</h1>
          {{
            govukTable({
              firstCellIsHeader: true,
              rows: [
                [
                  {
                    text: "Property address:"
                  },
                  {
                    text: "10 Hemberton Road, Borchester, B9 9LJ"
                  }
                ],
                [
                  {
                    text: "Payment of:"
                  },
                  {
                    text: "Band E Council tax to Borchester City Council"
                  }
                ],
                [
                  {
                    text: "Amount to pay:"
                  },
                  {
                    text: "Â£100.00 per month"
                  }
                ]
              ]
            })
          }}
        </div>
        {% set insetHTML %}
          <p class="govuk-heading-s">Your account is currently in arrears for February 2018.</p> 
          <p>Set up a Direct Debit plan and payments will be made automatically using the plan of your choice.</p>
        {% endset %}

        {{
          govukInsetText({
            html: insetHTML
          })
        }}

        <div class="column-two-thirds">
            <div class="panel panel-border-wide" style="margin-top:30px;">
            <div class="form-group">
              <a href="renew-council-tax-choose-payment"><button class="button">Proceed to payment options</button></a>
          </div>
          </div>
        </div>
      </div>
    </div>
    <div class="footer">
    </div>
  </body>
</html>
